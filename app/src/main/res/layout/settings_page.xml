<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_colour"
    tools:context=".Settings_Page">

    <Button
        android:id="@+id/settings_homebutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="84dp"
        android:backgroundTint="@color/button_colour"
        android:text="Homepage"
        android:textColor="@color/button_text_colour"
        app:layout_constraintBottom_toTopOf="@+id/settings_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/settings_abouttitle"
        android:layout_width="221dp"
        android:layout_height="0dp"
        android:layout_marginBottom="32dp"
        android:text="About"
        android:textAlignment="center"
        android:textColor="@color/text_colour"
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@+id/settings_abouttext"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/settings_testnotification" />

    <TextView
        android:id="@+id/settings_title"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="53dp"
        android:layout_marginEnd="53dp"
        android:layout_marginBottom="24dp"
        android:text="Settings"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@color/text_colour"
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@+id/settings_themeswitch"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/settings_homebutton" />

    <Switch
        android:id="@+id/settings_themeswitch"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="4dp"
        android:text="Theme"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@color/text_colour"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/settings_notificationswitch"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/settings_title" />

    <Switch
        android:id="@+id/settings_notificationswitch"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="33dp"
        android:text="Notifications"
        android:textColor="@color/text_colour"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/settings_testnotification"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/settings_themeswitch" />

    <TextView
        android:id="@+id/settings_abouttext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="37dp"
        android:layout_marginBottom="91dp"
        android:text="Created by Morgan Trainor for the COMP2000 module"
        android:textColor="@color/text_colour"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/settings_abouttitle" />

    <Button
        android:id="@+id/settings_testnotification"
        android:layout_width="184dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="95dp"
        android:backgroundTint="@color/button_colour"
        android:state_pressed="true"
        android:text="Test Notification"
        android:textColor="@color/button_text_colour"
        app:layout_constraintBottom_toTopOf="@+id/settings_abouttitle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/settings_notificationswitch" />

</androidx.constraintlayout.widget.ConstraintLayout>