<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="300dp"
    android:layout_height="140dp"
    android:layout_gravity="center"
    android:background="@color/rev_background_colour"
    android:orientation="vertical">

    <EditText
        android:id="@+id/empdat_update_ID"
        android:layout_width="96dp"
        android:layout_height="48dp"
        android:layout_marginTop="7dp"
        android:backgroundTint="@color/background_colour"
        android:hint="ID number"
        android:minHeight="48dp"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/rev_text_colour"
        android:textColorHint="@color/rev_text_colour"
        app:layout_constraintEnd_toStartOf="@+id/empdat_update_forename"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update Employee"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/rev_text_colour"
        android:textColorHint="@color/rev_text_colour"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/empdat_update_forename"
        android:layout_width="96dp"
        android:layout_height="48dp"
        android:layout_marginTop="7dp"
        android:backgroundTint="@color/background_colour"
        android:hint="Forename"
        android:minHeight="48dp"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/rev_text_colour"
        android:textColorHint="@color/rev_text_colour"
        app:layout_constraintEnd_toStartOf="@+id/empdat_update_surname"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/empdat_update_ID"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <EditText
        android:id="@+id/empdat_update_surname"
        android:layout_width="96dp"
        android:layout_height="48dp"
        android:layout_marginTop="7dp"
        android:backgroundTint="@color/background_colour"
        android:hint="Surname"
        android:minHeight="48dp"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/rev_text_colour"
        android:textColorHint="@color/rev_text_colour"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/empdat_update_forename"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <Button
        android:id="@+id/empdat_update_updatebutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="26dp"
        android:backgroundTint="@color/rev_button_colour"
        android:text="Add"
        android:textColor="@color/rev_button_text_colour"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/empdat_update_ID"
        app:layout_constraintVertical_bias="0.5" />

    <Button
        android:id="@+id/empdat_update_cancelbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="29dp"
        android:backgroundTint="@color/rev_button_colour"
        android:text="Cancel"
        android:textColor="@color/rev_button_text_colour"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/empdat_update_forename"
        app:layout_constraintVertical_bias="0.5" />

</androidx.constraintlayout.widget.ConstraintLayout>