<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="300dp"
    android:layout_height="140dp"
    android:layout_gravity="center"
    android:background="@color/rev_background_colour"
    android:orientation="vertical">

    <EditText
        android:id="@+id/empdat_delete_ID"
        android:layout_width="96dp"
        android:layout_height="0dp"
        android:layout_marginTop="2dp"
        android:backgroundTint="@color/background_colour"
        android:hint="ID number"
        android:minHeight="48dp"
        android:textAlignment="center"
        android:textColor="@color/rev_text_colour"
        android:textColorHint="@color/rev_text_colour"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete Employee"
        android:textAlignment="center"
        android:textColor="@color/rev_text_colour"
        android:textColorHint="@color/rev_text_colour"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/empdat_delete_delbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        android:backgroundTint="@color/rev_button_colour"
        android:text="Delete"
        android:textColor="@color/rev_button_text_colour"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/empdat_delete_ID" />

    <Button
        android:id="@+id/empdat_delete_cancelbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="18dp"
        android:backgroundTint="@color/rev_button_colour"
        android:text="Cancel"
        android:textColor="@color/rev_button_text_colour"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/empdat_delete_ID" />

</androidx.constraintlayout.widget.ConstraintLayout>